.container {
    width: 100%;
    height: 1200rpx;
}
.container swiper {
    width: 100%;
    height: 100%;
}
.container .page {
    width: 710rpx;
    height: 1080rpx;
    margin: 30rpx auto;
    /*background-color: #f6f6f6;*/
    border: 1px solid #666;
    border-radius: 20rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    /*text-align: center;
    line-height: 1080rpx;*/
}
.page .img {
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx 0;
}

.page .title {
    font-size: 40rpx;
    margin-bottom: 40rpx;
}
.page .content {
    width: 86%;
    font-size: 28rpx;
    font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
    color: #999;
}
.content .item {
    margin-bottom: 30rpx;
}
.content .item text {
    line-height: 44rpx;
}