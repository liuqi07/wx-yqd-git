/* invest-detail.wxss */
@import "../../common/dialog-tpl/dialog-tpl.wxss";

.dialog {
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 999;
}
/* ======================================= */


page {
    width: 100%;
    height: 100%;
}
swiper {
    width: 100%;
    height: 100%;
}

.container {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    background-color: #f5f5f5;
    position: relative;
}

.intro {
    width: 100%;
    height: 422rpx;
    background-color: #fff;
    display: flex;
    flex-direction: column;
    align-items: center;
}
.intro .intro-circle {
    width: 270rpx;
    height: 270rpx;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-radius: 135rpx;
    border: 1rpx solid #52a3e8;
    font-size: 24rpx;
    margin-top: 22rpx;
    background: url('data:image/png;base64,') no-repeat center bottom;
    background-size: 100% auto;
}
.intro-circle .title {
    margin-top: 44rpx;
    color: #a4a8bb;
}
.intro-circle view {
    height:26rpx;
    margin-top: 18rpx;
    font-size: 30rpx;
    color: #3f99e6;
}
.intro-circle .pre {
    font-size: 46rpx;
    font-weight: 900;
}
.intro-circle .txt {
    height: 44rpx;
    line-height: 44rpx;
    margin-top: 46rpx;
    color: #e4f1fb;
}
.intro-circle {
    color: #e4f1fb;
}

.intro .intro-list {
    display: flex;
    flex-direction: column;
    width: 596rpx;
    height: 110rpx;
    margin-left: 154rpx;
    margin-top: 4rpx;
}
.intro-list .item {
    height: 40rpx;
    padding: 0 9rpx;
    font-size: 22rpx;
    color: #757b8c;
    line-height: 40rpx;
    float: left;
    margin-right: 18rpx;
    margin-top: 17rpx;
    background-color: #e9f0fc;
}

.complete-per {
    height: 150rpx;
    display: flex;
    flex-direction: column;
    padding: 0 20rpx;
    margin-top: 16rpx;
    background-color: #fff;
}
.complete-per .title {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    color: #ff6d4b;
    margin-top: 40rpx;
}
.title .title-l {
    margin-left: 10rpx;
    font-size: 28rpx;
}
.title .title-l .time {
    font-size: 24rpx;
}
.title .title-r {
    font-size: 24rpx;
    color: #bbbecc;
    margin-top: 4rpx;
}
.title .title-r .per {
    color: #ff6d4b;
}
.complete-per .bar {
    width: 100%;
    /*height: 10rpx;*/
    background-color: #bbbecc;
    border-radius: 10rpx;
    margin-top: 38rpx;
    position: relative;
}
.complete-per .bar .bar-content {
    width: 80%;
    height: 100%;
    background-color: #ff6d4b;
    border-radius: 10rpx;
    position: absolute;
    transform: rotateY(90deg);
}

.balance {
    height: 240rpx;
    display: flex;
    flex-direction: column;
    background-color: #fff;
    padding: 0 42rpx 0 48rpx;
    margin-top: 19rpx;
}
.balance .balance-header {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    margin-top: 40rpx;
    font-size: 24rpx;
    color: #757b8c;
}
.balance-header .orange {
    color: #ff6d24;
    font-size: 30rpx;
    font-weight: 700;
}
.balance .balance-input {
    margin-top: 42rpx;
}
.balance-input .ipt {
    height: 86rpx;
    border: 1rpx solid #e4e4e4;
    border-radius: 10rpx;
    padding-left: 105rpx;
}
.balance-input .placeholder {
    color: #a4a8bb;
    font-size: 26rpx;
}

.invest {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-top: 60rpx;
}
.invest .title {
    height: 46rpx;
    line-height: 46rpx;
    font-size: 20rpx;
    color: #bfc2ce;
}
.invest .to-invest {
    width: 90%;
    height: 80rpx;
    background-color: #3f99e6;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    font-size: 34rpx;
    border-radius: 10rpx;
    margin-top: 16rpx;
}
.invest .img {
    width: 23rpx;
    height: 21rpx;
    margin: 17rpx 0 20rpx;
}
.invest .upward {
    display: flex;
    flex-direction: column;
    align-items: center;
}
.upward .txt {
    font-size: 22rpx;
    color: #757b8c;
    position: relative;
}
.upward .txt::before {
    width: 114rpx;
    /*height: rpx;*/
    position: absolute;
    left: -145rpx;
    top:12rpx;
    content: '';
    border: 1rpx solid #757b8c;
    transform: scaleY(0.5);
}
.upward .txt::after {
    width: 114rpx;
    /*height: rpx;*/
    position: absolute;
    left: 205rpx;
    top:12rpx;
    content: '';
    border: 1rpx solid #757b8c;
    transform: scaleY(0.5);
}

